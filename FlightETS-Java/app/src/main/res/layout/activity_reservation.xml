<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_beach"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header navigation style web -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#FFFFFF"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:gravity="center_vertical"
            android:elevation="4dp">

            <!-- Logo FlightETS -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="✈️ FlightETS"
                android:textColor="#1976D2"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Menu style web -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="Accueil"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="Rechercher un vol"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="Mes réservations"
                android:textColor="#333333"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="andrea borges"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/headerLogoutButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_orange"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:text="Déconnexion"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

        <!--  Contenu principal -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="32dp">

            <androidx.cardview.widget.CardView
                android:layout_width="600dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="32dp">

                    <!--  Section vol sélectionné style web -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FF9800"
                        android:orientation="vertical"
                        android:padding="20dp"
                        android:layout_marginBottom="24dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Votre vol sélectionné"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="12dp" />

                        <!-- Infos vol style web -->
                        <TextView
                            android:id="@+id/volSelectionneInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Air France - AF351\nMontréal (YUL) → Paris (CDG)\nDépart : 25/08/2025 18:00:00\nArrivée : 06/08/2025 06:30:00\nClasse : Affaires | Prix : 799.95 $"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:lineSpacingExtra="4dp" />

                    </LinearLayout>

                    <!--  Section informations passager -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Informations du passager"
                        android:textColor="#FF9800"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <!-- Nom complet -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nom complet"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/nomCompletInput"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_beach"
                        android:text="andreas borges"
                        android:paddingHorizontal="16dp"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:layout_marginBottom="16dp" />

                    <!-- Date de naissance -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Date de naissance"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/dateNaissanceInput"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_beach"
                        android:hint="aaaa-mm-jj"
                        android:inputType="date"
                        android:paddingHorizontal="16dp"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:layout_marginBottom="16dp"
                        android:clickable="true"
                        android:focusable="false" />

                    <!-- Numero de passeport -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Numéro de passeport"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/numeroPasseportInput"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_beach"
                        android:hint="Entrez votre numéro de passeport"
                        android:paddingHorizontal="16dp"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:layout_marginBottom="24dp" />

                    <!--  Bouton confirmer style web -->
                    <Button
                        android:id="@+id/confirmerReservationButton"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/button_orange"
                        android:text="Confirmer la réservation"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>