<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_beach"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Reusable header -->
    <include
        android:id="@+id/header"
        layout="@layout/header_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp" />

    <!-- Card 1: Selected flight -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Votre vol sélectionné"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#1e3a8a"
                android:layout_marginBottom="8dp" />

            <!-- MUST match ReservationActivity IDs -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Compagnie - N° vol"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#ff7a00"
                android:layout_marginBottom="6dp" />

            <TextView
                android:id="@+id/tvRoutes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Origine (CODE) → Destination (CODE)"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvDepart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Départ : "
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/tvArrivee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Arrivée : "
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/tvDuree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Durée estimée : "
                android:textStyle="italic"
                android:textColor="#777777"
                android:layout_marginBottom="6dp" />

            <TextView
                android:id="@+id/tvPriceClass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Prix $ - Classe"
                android:textStyle="bold"
                android:textColor="#1e3a8a" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Card 2: Passenger form -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Informations du passager"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#1e3a8a"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nom complet"
                android:layout_marginBottom="6dp" />

            <!-- MUST match ReservationActivity IDs -->
            <EditText
                android:id="@+id/nomPassagers"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Nom"
                android:enabled="false"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btnConfirmers"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Confirmer la réservation"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:background="@drawable/button_orange" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
