<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_beach"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header (only visible when logged-in by Activity code if you prefer) -->
    <include
        android:id="@+id/header"
        layout="@layout/header_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp" />

    <!-- Payment card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paiement sécurisé"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#1e3a8a"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/tvAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Montant : —"
                android:textStyle="bold"
                android:textColor="#ff7a00"
                android:layout_marginBottom="16dp" />

            <!-- Numéro de carte -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Numéro de carte"
                android:layout_marginBottom="6dp" />

            <EditText
                android:id="@+id/etCardNumber"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="1234 5678 9012 3456"
                android:inputType="number"
                android:maxLength="19"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:layout_marginBottom="12dp" />

            <!-- Ligne expiration + CVV -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingEnd="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Date d'expiration" />

                    <EditText
                        android:id="@+id/etExpiry"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="MM/AA"
                        android:inputType="number"
                        android:maxLength="5"
                        android:background="@drawable/edittext_background"
                        android:padding="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CVV" />

                    <EditText
                        android:id="@+id/etCvv"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="123"
                        android:inputType="numberPassword"
                        android:maxLength="3"
                        android:background="@drawable/edittext_background"
                        android:padding="12dp" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btnPay"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Payer maintenant"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/button_orange" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
