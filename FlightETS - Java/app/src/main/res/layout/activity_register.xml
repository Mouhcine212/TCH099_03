<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_beach">

    <androidx.cardview.widget.CardView
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="16dp"
        app:cardCornerRadius="14dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@android:color/white">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:paddingBottom="24dp">

                <!-- Title -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="FlightETS"
                    android:textColor="#1976D2"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Crée ton compte"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:layout_marginBottom="16dp" />

                <!-- Email -->
                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:hint="Adresse courriel"
                    android:inputType="textEmailAddress"
                    android:paddingHorizontal="12dp"
                    android:textSize="14sp"
                    android:layout_marginBottom="10dp" />

                <!-- Password -->
                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:hint="Mot de passe"
                    android:inputType="textPassword"
                    android:paddingHorizontal="12dp"
                    android:textSize="14sp"
                    android:layout_marginBottom="10dp" />

                <!-- First name -->
                <EditText
                    android:id="@+id/firstName"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:hint="Prénom"
                    android:inputType="textPersonName"
                    android:paddingHorizontal="12dp"
                    android:textSize="14sp"
                    android:layout_marginBottom="10dp" />

                <!-- Last name -->
                <EditText
                    android:id="@+id/lastName"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:hint="Nom"
                    android:inputType="textPersonName"
                    android:paddingHorizontal="12dp"
                    android:textSize="14sp"
                    android:layout_marginBottom="10dp" />

                <!-- Phone (optional) -->
                <EditText
                    android:id="@+id/telephone"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:hint="Téléphone (facultatif)"
                    android:inputType="phone"
                    android:paddingHorizontal="12dp"
                    android:textSize="14sp"
                    android:layout_marginBottom="14dp" />

                <!-- Create account -->
                <Button
                    android:id="@+id/createAccountButton"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/button_orange"
                    android:text="Créer un compte"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <!-- Messages -->
                <TextView
                    android:id="@+id/errorMsg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#ff0000"
                    android:textSize="13sp"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/successMsg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#2e7d32"
                    android:textSize="13sp"
                    android:layout_marginBottom="6dp" />

                <!-- Back to login -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tu as déjà un compte ? "
                        android:textColor="#666666"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/backToLogin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Connexion"
                        android:textColor="#FF9800"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:clickable="true"
                        android:focusable="true" />
                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
